<div class="container">
  <div class="row mt-5 mb-3">
    <div class="col-9 offset-1">
      <span class="h4">会員一覧</span>
    </div>
  </div>
  <div class="row">
    <div class="col-9 offset-2">
      <table class="table">
        <thead class="table-secondary">
          <th>会員ID</th>
          <th>氏名</th>
          <th>メールアドレス</th>
          <th>ステータス</th>
        </thead>
        <tbody>
          <% @customers.each do |customer| %>
            <tr>
              <td><%= customer.id %></td>
              <td>
                <%= link_to admin_customer_path(customer.id) do %>
                  <%= customer.last_name %><%= customer.first_name %>
                <% end %>
              </td>
              <td><%= customer.email %></td>
              <td class= <%= customer.is_deleted ? "text-muted" : "text-success" %>>
                <strong><%= customer.is_deleted ? "退会" : "有効" %></strong>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <div class="row">
    <div class="col-4 offset-4 mt-5">
      <%= paginate @customers %>
    </div>
  </div>
</div>