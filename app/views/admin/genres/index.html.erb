<div class="container">
  <div class="row mt-5 mb-5">
    <div class="col-10 offset-1">
      <span class="h4">ジャンル一覧・追加</span>
    </div>
  </div>
  <div class="row">
    <div class="col-8 pl-3">
      <%= form_with model: @genre, url: admin_genres_path do |f| %>
        <table class='table table-borderless'>
          <tbody>
            <tr>
              <td>ジャンル名</td>
              <td><%= f.text_field :name, autofocus: true, placeholder: "ジャンル名" %></td>
              <td><%= f.submit '新規登録', class: "btn btn-success" %></td>
            </tr>
          </tbody>
        </table>
      <% end %>
    </div>
  </div>
  <div class="row">
    <div class="col-6 pl-3">
      <table class='table'>
        <thead>
          <tr class="table-secondary">
            <th>ジャンル</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
            <tr>
              <td><%= genre.name %></td>
              <td><%= link_to "編集する", edit_admin_genre_path(genre), class: "btn btn-success" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>