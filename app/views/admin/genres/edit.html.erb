<div class="container">
  <div class="row mt-5 mb-5">
    <div class="col-10 offset-1">
      <span class="h4">ジャンル編集</span>
    </div>
  </div>
  <div class="row">
    <div class="col-8 pl-3">
      <%= form_with model: @genre, url: admin_genre_path(@genre.id), method: :patch do |f| %>
        <table class='table table-borderless'>
          <tbody>
            <tr>
              <td><strong>ジャンル名</strong></td>
              <td><%= f.text_field :name, autofocus: true, placeholder:"ジャンル名" %></td>
              <td><%= f.submit "変更を保存", class: "btn btn-success" %></td>
            </tr>
          </tbody>
        </table>
      <% end %>
    </div>
  </div>
</div>