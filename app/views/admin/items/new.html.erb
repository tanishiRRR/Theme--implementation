<h2>商品新規登録</h2>
<%= form_with model: @item, url: admin_items_path, method: :post do |f| %>

    <table>
      <tbody>
        <tr>
          <td><%= f.label :image, "商品画像" %></td>
          <td><%= f.file_field :image, accept: "image/*" %><td>
        </tr>
        <tr>
          <td><%= f.label :name, "商品名" %></td>
          <td><%= f.text_field :name, autofocus: true, placeholder: "商品名" %></td>
        </tr>
        <tr>
          <td><%= f.label :introduction, "商品説明" %></td>
          <td><%= f.text_area :introduction, placeholder: "商品説明" %></td>
        </tr>
        <tr>
          <td><%= f.label :genre_id, "ジャンル" %></td>
          <td><%= f.select :genre_id, Genre.all.map { |category| [category.name, category.id] }, {include_blank: '--選択してください--'} %></td>
        </tr>
        <tr>
          <td><%= f.label :price, "税抜価格" %></td>
          <td><%= f.number_field :price, placeholder: "税抜価格" %>円</td>
        </tr>
        <tr>
          <td><%= f.label :is_active, "販売ステータス" %></td>
          <td>
              <%= f.radio_button :is_active, true, checked: true %>
              <%= f.label :is_active, "販売中", value: true %>
              <%= f.radio_button :is_active, false %>
              <%= f.label :is_active, "販売停止中", value: false %>
          </td>
        </tr>
      </tbody>
    </table>

    <div class="actions">
      <%= f.submit '新規登録' %>
    </div>

<% end %>