<h2>商品詳細</h2>

<div>
  <%= image_tag @item.get_image %>
</div>

<div>
  <table>
    <tbody>
      <tr>
        <td>商品名</td>
        <td><%= @item.name %></td>
      </tr>
      <tr>
        <td>商品説明</td>
        <td><%= @item.introduction %></td>
      </tr>
      <tr>
        <td>ジャンル</td>
        <td><%= @item.genre_id %></td>
      </tr>
      <tr>
        <td>
          税込価格<br>
          (税抜価格)
        </td>
        <td><%= item.with_tax_price.to_s(:delimited) %>(<%= @item.price.to_s(:delimited) %>)円</td>
      </tr>
      <tr>
        <td>販売ステータス</td>
        <td><%= @item.is_active ? "販売中" : "販売停止中" %></td>
      </tr>
    </tbody>
  </table>
</div>
<%= link_to "編集する", edit_admin_item_path(@item.id) %>