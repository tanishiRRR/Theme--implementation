<div class="container">
  <div class="row mt-5 mb-5">
    <div class="col-9 offset-1">
      <span class="h4">商品詳細</span>
    </div>
  </div>
  <div class="row">
    <div class="col-3 pl-3">
      <%= image_tag @item.get_image, size: "180x150" %>
    </div>
    <div class="col-6">
      <table class="table table-borderless right">
        <tbody>
          <tr>
            <td>商品名</td>
            <td><%= @item.name %></td>
          </tr>
          <tr>
            <td>商品説明</td>
            <td><%= @item.introduction %></td>
          </tr>
          <tr>
            <td>ジャンル</td>
            <td><%= @item.genre_id %></td>
          </tr>
          <tr>
            <td>
              税込価格<br>
              (税抜価格)
            </td>
            <td><%= @item.with_tax_price.to_s(:delimited) %>(<%= @item.price.to_s(:delimited) %>)円</td>
          </tr>
          <tr>
            <td>販売ステータス</td>
            <td><%= @item.is_active ? "販売中" : "販売停止中" %></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
  <div class="row">
    <div class="col-4 offset-4">
      <%= link_to "編集する", edit_admin_item_path(@item.id), class: "btn btn-success" %>
    </div>
  </div>
</div>