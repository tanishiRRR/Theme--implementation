<h2>商品一覧</h2>

  <table>
    <thead>
      <tr>
        <td>商品ID</td>
        <td>商品名</td>
        <td>税抜価格</td>
        <td>ジャンル</td>
        <td>ステータス</td>
      </tr>
    </thead>
    <tbody>
      <% @items.each do |item| %>
        <tr>
          <td><%= item.id %></td>
          <td><%= item.name %></td>
          <td><%= item.price %></td>
          <td><%= item.genre.id %></td>
          <td><%= item.is_active ? "販売中" : "販売停止中" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

<%= paginate @items %>