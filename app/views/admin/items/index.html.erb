<div class="container">
  <div class='row'>
    <div class='col-7 offset-2 mt-5 mb-3'>
      <span class="h4">商品一覧</span>
    </div>
    <div class='col-3 mt-5 mb-3'>
      <%= link_to '新規登録', new_admin_item_path %>
    </div>
  </div>
  <div class='row'>
    <div class='col-10 offset-1'>
      <table class="table table-borderless">
        <thead>
          <tr class="table-secondary">
            <th>商品ID</th>
            <th>商品名</th>
            <th>税抜価格</th>
            <th>ジャンル</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @items.each do |item| %>
            <tr>
              <td><%= item.id %></td>
              <td><%= link_to item.name, admin_item_path(item.id) %></td>
              <td><%= item.price %></td>
              <td><%= item.genre.name %></td>
              <td class= <%= item.is_active ? "text-success" : "text-muted" %>>
                <strong><%= item.is_active ? "販売中" : "販売停止中" %></strong>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <div class="row">
        <div class="col-4 offset-4 mt-5">
          <%= paginate @items %>
        </div>
      </div>
    </div>
  </div>
</div>