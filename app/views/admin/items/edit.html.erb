<div class="container">
  <div class="row mt-5 mb-5">
    <div class="col-9 offset-1">
      <span class="h4">商品編集</span>
    </div>
  </div>
  <div class="row">
    <div class="col-8 offset-2">
      <%= form_with model: @item, url: admin_item_path, method: :patch do |f| %>
        <table class="table table-borderless">
          <tbody>
            <tr>
              <td>商品画像</td>
              <td><%= f.file_field :image, accept: "image/*" %><td>
            </tr>
            <tr>
              <td>商品名</td>
              <td><%= f.text_field :name, autofocus: true, placeholder: "商品名" %></td>
            </tr>
            <tr>
              <td>商品説明</td>
              <td><%= f.text_area :introduction, placeholder: "商品説明" %></td>
            </tr>
            <tr>
              <td>ジャンル</td>
              <td><%= f.select :genre_id, Genre.all.map { |category| [category.name, category.id] }, {include_blank: '--選択してください--'} %></td>
            </tr>
            <tr>
              <td>税抜価格</td>
              <td><%= f.number_field :price, placeholder: "税抜価格" %>円</td>
            </tr>
            <tr>
              <td>販売ステータス</td>
              <td>
                  <%= f.radio_button :is_active, true, checked: true %>
                  <%= f.label :is_active, "販売中", value: true %>
                  <%= f.radio_button :is_active, false %>
                  <%= f.label :is_active, "販売停止中", value: false %>
              </td>
            </tr>
            <tr>
              <td></td>
              <td><%= f.submit '変更を保存', class: "btn btn-success" %></td>
            </tr>
          </tbody>
        </table>
      <% end %>
    </div>
  </div>
</div>