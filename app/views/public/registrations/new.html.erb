<h2>新規会員登録</h2>

<%= form_with model: @customer, url: new_customer_registration_path do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>

  <table>
    <tbody>
      <tr>
        <td>名前</td>
        <td><%= f.label :"(姓)" %></td>
        <td><%= f.text_field :last_name, autofocus: true, placeholder: "令和" %></td>
        <td><%= f.label :"(名)" %></td>
        <td><%= f.text_field :first_name, placeholder: "道子" %></td>
      </tr>
      <tr>
        <td>フリガナ</td>
        <td><%= f.label :"(セイ)" %></td>
        <td><%= f.text_field :last_name_kana, placeholder: "レイワ" %></td>
        <td><%= f.label :"(メイ)" %></td>
        <td><%= f.text_field :first_name_kana, placeholder: "ミチコ" %></td>
      </tr>
      <tr>
        <td><%= f.label :"メールアドレス"%></td>
        <td></td>
        <td><%= f.email_field :email, placeholder: "sample@example.com" %></td>
      </tr>
      <tr>
        <td><%= f.label :"郵便番号(ハイフンなし)" %></td>
        <td></td>
        <td><%= f.text_field :postal_code, placeholder: "0000000" %></td>
      </tr>
      <tr>
        <td><%= f.label :"住所" %></td>
        <td></td>
        <td><%= f.text_field :address, placeholder: "東京都渋谷区代々木神園町0-0" %></td>
      </tr>
      <tr>
        <td><%= f.label :"電話番号(ハイフンなし)" %></td>
        <td></td>
        <td><%= f.text_field :telephone_number, placeholder: "00000000000" %></td>
      </tr>
      <tr>
        <td><% if @minimum_password_length %>
              パスワード(<%= @minimum_password_length %>文字以上)
            <% end %>
        </td>
        <td></td>
        <td><%= f.password_field :password, autocomplete: "new-password" %></td>
      </tr>
      <tr>
        <td><%= f.label :"パスワード(確認用)" %></td>
        <td></td>
        <td><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
      </tr>
    </tbody>
  </table>

  <div class="actions">
    <%= f.submit "新規登録" %>
  </div>
<% end %>

<h2>既に登録済みの方</h2>
<%= render "public/shared/links" %>
