<div>
  <h2>ショッピングカート</h2>
</div>

<div>
  <%= button_to "カートを空にする", cart_items_destroy_all_path, method: :delete, data: { confirm: '本当に削除しますか？' } %>
</div>

<div>
  <table>
    <thead>
      <tr>
        <td>商品名</td>
        <td>単価(税込)</td>
        <td>数量</td>
        <td>小計</td>
        <td></td>
      </tr>
    </thead>
    <tbody>
      <% @cart_items.each do |cart_item| %>
        <tr>
          <td><%= image_tag cart_item.item.get_image %><%= cart_item.item.name %></td>
          <td><%= cart_item.item.with_tax_price.to_s(:delimited) %></td>
          <td>
            <%= form_with model: CartItem.new, url: cart_item_path(cart_item.id), method: :patch do |f| %>
              <%= f.hidden_field :item_id, value: cart_item.item.id %>
              <%= f.hidden_field :customer_id, value: current_customer.id %>
              <%= f.select :amount, *[1..10] %>
              <%= f.submit "変更" %>
            <% end %>
          </td>
          <td><%= (cart_item.subtotal).to_s(:delimited) %></td>
          <td><%= button_to "削除する", cart_item_path(cart_item), method: :delete, data: { confirm: '本当に削除しますか？' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>