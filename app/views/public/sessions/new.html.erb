<div class="container">
  <div class='row mb-3'>
    <div class='col-11 offset-1'>
      <h2 class="pt-3">ログイン</h2>
    </div>
  </div>
  <div class='row mb-3'>
    <div class='col-10 offset-2'>
      <h4 class="pt-3">会員の方はこちらからログイン</h4>
    </div>
  </div>
  <div class='row'>
    <div class='col-9 offset-3'>
      <table class='table table-borderless'>
        <%= form_with model: @customer, url: new_customer_session_path do |f| %>
          <tbody>
            <tr>
              <td><%= f.label "メールアドレス" %></td>
              <td><%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "sample@example.com" %></td>
            </tr>

            <tr>
              <td><%= f.label "パスワード" %></td>
              <td><%= f.password_field :password, autocomplete: "current-password" %></td>
            </tr>
            <tr>
              <td></td>
              <td><%= f.submit "ログイン", class: "btn btn-primary" %></td>
            </tr>
          <tbody>
        <% end %>
      </table>
    </div>
  </div>
  <div class='row'>
    <div class='col-10 offset-2'>
      <h4 class="pt-3">会員登録がお済みでない方</h4>
      <div class='col-9 offset-3'>
        <%= render "public/shared/links" %>
      </div>
    </div>
  </div>
</div>
