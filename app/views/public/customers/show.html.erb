<div "container">
  <div class='row mb-3'>
    <div class='col-9 offset-1'>
      <h4 class="pt-3">マイページ</h4>
    </div>
  </div>
  <div class='row mb-3'>
    <div class='col-9 offset-1'>
      <table class='table table-borderless'>
        <tbody>
          <tr>
            <td class="h3">登録情報</td>
            <td><%= link_to "編集する", customers_information_edit_path, class: "btn btn-success" %></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
  <div class='row'>
    <div class='col-9 offset-1'>
      <table class='table table-bordered border-dark'>
        <tbody>
          <tr>
            <td class="table-secondary">氏名</td>
            <td><%= @customer.last_name %><%= @customer.first_name %></td>
          </tr>
          <tr>
            <td class="table-secondary">カナ</td>
            <td><%= @customer.last_name_kana %><%= @customer.first_name_kana %></td>
          </tr>
          <tr>
            <td class="table-secondary">郵便番号</td>
            <td><%= @customer.postal_code %></td>
          </tr>
          <tr>
            <td class="table-secondary">住所</td>
            <td><%= @customer.address %></td>
          </tr>
          <tr>
            <td class="table-secondary">電話番号</td>
            <td><%= @customer.telephone_number %></td>
          </tr>
          <tr>
            <td class="table-secondary">メールアドレス</td>
            <td><%= @customer.email %></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
  <div class='row mb-3'>
    <div class='col-9 offset-1'>
      <table class='table table-borderless'>
        <tbody>
          <tr>
            <td class="h3">配送先</td>
            <td><%= link_to "一覧を見る", addresses_path, class: "btn btn-primary" %></td>
          </tr>
          <tr>
            <td class="h3">注文履歴</td>
            <td><%= link_to "一覧を見る", orders_path, class: "btn btn-primary" %></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>