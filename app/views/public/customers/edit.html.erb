<div "container">
  <div class='row mb-3'>
    <div class='col-9 offset-1'>
      <h4 class="pt-3">会員情報編集</h4>
    </div>
  </div>
  <div class='row'>
    <div class='col-9 offset-1'>
      <table class='table table-borderless'>
        <%= form_with model: @customer, url: customers_information_path, method: :patch, local: true do |f| %>
          <tbody>
            <tr>
              <td><%= f.label "氏名" %></td>
              <td><%= f.text_field :last_name, placeholder: "令和", autofocus: true %></td>
              <td><%= f.text_field :first_name, placeholder: "道子" %></td>
            </tr>
            <tr>
              <td><%= f.label "フリガナ" %></td>
              <td><%= f.text_field :last_name_kana, placeholder: "レイワ" %></td>
              <td><%= f.text_field :first_name_kana, placeholder: "ミチコ" %></td>
            </tr>
            <tr>
              <td><%= f.label "郵便番号" %></td>
              <td><%= f.text_field :postal_code, placeholder: "0000000" %></td>
            </tr>
            <tr>
              <td><%= f.label "住所" %></td>
              <td><%= f.text_field :address, placeholder: "東京都渋谷区代々木神園町0-0" %></td>
            </tr>
            <tr>
              <td><%= f.label "電話番号" %></td>
              <td><%= f.text_field :telephone_number, placeholder: "00000000000" %></td>
            </tr>
            <tr>
              <td><%= f.label "メールアドレス" %></td>
              <td><%= f.text_field :email, placeholder: "sample@example.com" %></td>
            </tr>
            <tr>
              <td></td>
              <td><%= f.submit "編集内容を保存", class: "btn btn-success" %></td>
              <td><%= link_to "退会する", customers_unsubscribe_path, class: "btn btn-danger" %></td>
            </tr>
          <tbody>
        <% end %>
      </table>
    </div>
  </div>
</div>
