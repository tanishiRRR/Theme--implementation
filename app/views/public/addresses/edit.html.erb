<div class="container">
  <div class='row mb-3'>
    <div class='col-11 offset-1'>
      <h4 class="pt-3">配送先編集</h4>
    </div>
  </div>
  <div class='row mb-5'>
    <div class='col'>
      <div>
        <%= form_with model: @address, url: address_path, method: :patch, local: true do |f| %>
          <span>
            <%= f.label "郵便番号（ハイフンなし）" %>
            <%= f.text_field :postal_code, placeholder: "0000000", autofocus: true %>
          </span><br>
          <span>
            <%= f.label "住所　　　　　　　　　　" %>
            <%= f.text_field :address, placeholder: "東京都渋谷区代々木神園町0-0" , class: "w-50"%>
          </span><br>
          <span>
            <%= f.label "宛名　　　　　　　　　　" %>
            <%= f.text_field :name, placeholder: "令和道子" %>
          </span>
          <span class="pl-5">
            <%= f.submit "変更を保存", class: "btn btn-success" %>
          </span>
        <% end %>
      </div>
    </div>
  </div>
</div>